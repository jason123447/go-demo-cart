{
    "editor.fontLigatures": false,
    "[scss]": {
        "editor.insertSpaces": true, // 使用空格縮排
        "editor.tabSize": 2, // 設定縮排為 2 個空格
        "editor.trimAutoWhitespace": true, // 自動去除多餘空白
        "editor.formatOnSave": false, // 保存時自動格式化
        "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
    },
}