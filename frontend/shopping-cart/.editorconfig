# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true


[*.scss]
indent_style = space               # 使用空格縮排
indent_size = 2                    # 設定縮排大小為 2
charset = utf-8                    # 設定編碼格式
trim_trailing_whitespace = true    # 自動去除行尾多餘的空白
insert_final_newline = true        # 確保檔案結尾有一個空行
max_line_length = 120              # 設定每行的最大長度


[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
